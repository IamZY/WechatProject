/* pages/index/index.wxss */
.indexContainer{

}

.banners{
  width: 100%;
  height: 300rpx;
}

.banners image{
  width: 100%;
  height: 100%;
}

/*五个图标的样式*/
.navContainer{
  display: flex;
  /*flex-direction: column;*/
  /*align-content: center;*/
}

.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
  /*text-align: center;*/
}

.navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background: rgb(240,19,19);
  font-size: 50rpx;
  color: white;
  margin: 20rpx 0;
}

.navItem text{
  font-size: 26rpx;
}

.recommendContainer{
  padding: 20rpx;
}

/*推荐歌曲*/
.recommendContainer .header .title{
  font-size: 32rpx;
  line-height: 80rpx;
  color: #666;
}

.recommendContainer .header .more{
  float: right;
  border: 1rpx solid #333;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
}

.recommendScroll{
  display: flex;
}

/* 推荐内容区 */
.scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}

.scrollItem image {
  height: 200rpx;
  width: 200rpx;
  border-radius: 10rpx;
}

.scrollItem text {
  font-size: 26rpx;
  /*单行文本溢出隐藏*/
  /*display: block;*/
  /*white-space: nowrap;*/
  /*overflow: hidden;*/
  /*text-overflow: ellipsis;*/
  /*多行文本溢出隐藏 省略号代替*/
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;  /*设置多行行数*/
}
